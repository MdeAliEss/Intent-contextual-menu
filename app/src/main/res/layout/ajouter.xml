<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <!-- Container for the "Supprimier Avec Success" and "CLICK ME TO GO BACK" TextViews -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_gravity="center"
        android:gravity="center">

        <!-- "Supprimier Avec Success" TextView -->
        <TextView
            android:id="@+id/Ajouter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter Avec Success"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="40dp"
            android:textStyle="bold" />

        <!-- "CLICK ME TO GO BACK" TextView positioned directly below -->
        <TextView
            android:id="@+id/backAjou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="CLICK ME TO GO BACK"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
